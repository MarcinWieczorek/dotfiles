#
# wm independent hotkeys
#

# -----------------
# super +:
# F1     - browser
# F2     - file manager
# F3     - email
# return - terminal
# alt+l  - screenlock
# Q      - kill window
# -----------------

# terminal emulator
super + Return
    alacritty

# firefox
super + F1
    firefox

# file managers
super + F2
    alacritty -e vifm& \
    sleep 0.2; \
    bspc node -f -d II

super + shift + F2
    thunar

# email client
super + F3
    emacs -f notmuch

# program launcher
super + d
    albert show

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# run screenlock
super + alt + l
    slock

#
# Music controls
#

XF86AudioPlay
    mpc toggle
Pause
    mpc toggle

XF86WakeUp
    mpc toggle

XF86AudioPrev
    mpc next

XF86AudioNext
    mpc next

XF86AudioMute
    amixer -q set Master toggle

XF86AudioLowerVolume
    amixer -q set Master 5%-

XF86AudioRaiseVolume
    amixer -q set Master 5%+

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
    bspc {quit,wm -r}

# close and kill
super + Q
    bspc node -c

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
    bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
    bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus/move the node in the given direction
# --- APPROVED
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
# --- TO BE REMOVED, unused
# super + {p,b,comma,period}
#     bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
    bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
# --- KEY USED ALREADY
# super + bracket{left,right}
#     bspc desktop -f {prev,next}.local

# move desktop to other monitor
super + bracket{left,right}
  desk=`bspc query -D -d focused`; \
  bspc desktop -m {prev,next}; \
  bspc monitor -f {prev,next}; \
  ~/.config/bspwm/reorder.sh; \
  bspc desktop -f $desk

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# focus the older or newer node in the focus history
# --- probably not needed
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    /home/marcin/.config/bspwm/desktop_goto.sh {goto,move} {1-9,10}
    # bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}


# Approved


# CUSTOM BY MW
# Create new desktop on current monitor
super + D
    name=`echo -n"" | dmenu -f -p "Window name:" | tr -d '\n'`; \
    name=`[ "$name" ] || shuf -n1 /usr/share/dict/cracklib-small`; \
    bspc monitor -f -a $name

super + E
    ~/.bin/dmenu_configs.sh
